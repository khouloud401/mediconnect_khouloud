{% extends 'base.html.twig' %}

{% block title %}Inscription - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --sky-blue: #00d4ff;
            --pistachio-green: #b2ec5d;
            --nurse-violet: #a55eea;
            --glass-white: rgba(255, 255, 255, 0.9);
        }

        body {
            background: url("{{ asset('images/image4.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
        }

        .main-content {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.2);
            padding: 40px 20px;
        }

        .back-arrow {
            position: absolute;
            top: 25px;
            left: 25px;
            color: white;
            font-size: 2.8rem;
            text-shadow: 0 4px 10px rgba(0,0,0,0.5);
            transition: 0.3s ease;
            z-index: 1000;
        }

        .back-arrow:hover { color: var(--sky-blue); transform: scale(1.1); }

        .page-title {
            color: white;
            font-weight: 800;
            text-shadow: 0 4px 15px rgba(0,0,0,0.6);
            margin-bottom: 50px;
            text-align: center;
            letter-spacing: 1px;
        }

        /* Cartes Bento */
        .role-card {
            background: var(--glass-white);
            backdrop-filter: blur(15px);
            border-radius: 35px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            padding: 40px 25px;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .role-card:hover {
            transform: translateY(-15px);
            background: rgba(255, 255, 255, 1);
            box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        }

        /* Style des cercles d'icônes */
        .icon-circle {
            width: 100px;
            height: 100px;
            margin: 0 auto 25px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-size: 3rem;
            box-shadow: 0 8px 15px rgba(0,0,0,0.05);
            transition: 0.3s;
        }

        /* Couleurs spécifiques aux icônes */
        .patient-icon { background: rgba(0, 212, 255, 0.1); color: var(--sky-blue); }
        .doctor-icon { background: rgba(56, 118, 29, 0.1); color: #38761d; }
        .nurse-icon { background: rgba(165, 94, 234, 0.1); color: var(--nurse-violet); }

        .btn-reg {
            border-radius: 20px;
            padding: 14px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: none;
            transition: 0.3s;
            color: white !important;
            text-decoration: none;
        }

        .btn-patient { background: var(--sky-blue); box-shadow: 0 8px 20px rgba(0, 212, 255, 0.3); }
        .btn-doctor { background: #38761d; box-shadow: 0 8px 20px rgba(56, 118, 29, 0.3); }
        .btn-nurse { background: var(--nurse-violet); box-shadow: 0 8px 20px rgba(165, 94, 234, 0.3); }

        .btn-reg:hover {
            transform: translateY(-3px);
            filter: brightness(1.1);
        }

        footer { display: none !important; }
    </style>

    <div class="main-content">
        <a href="{{ path('app_home') }}" class="back-arrow">
            <i class="bi bi-arrow-left-circle-fill"></i>
        </a>

        <div class="container">
            <h2 class="page-title display-4">Rejoindre MediConnect</h2>

            <div class="row g-4 justify-content-center">
                {# Patient #}
                <div class="col-lg-4 col-md-6">
                    <div class="role-card text-center shadow">
                        <div>
                            <div class="icon-circle patient-icon">
                                <i class="bi bi-person-heart"></i>
                            </div>
                            <h3 class="fw-bold mb-3" style="color: #2c3e50;">Patient</h3>
                            <p class="text-muted px-2">Gérez vos rendez-vous et accédez à vos soins facilement.</p>
                        </div>
                        <a href="{{ path('app_register_patient') }}" class="btn-reg btn-patient mt-4">S'inscrire</a>
                    </div>
                </div>

                {# Médecin #}
                <div class="col-lg-4 col-md-6">
                    <div class="role-card text-center shadow">
                        <div>
                            <div class="icon-circle doctor-icon">
                                <i class="bi bi-stethoscope"></i>
                            </div>
                            <h3 class="fw-bold mb-3" style="color: #2c3e50;">Médecin</h3>
                            <p class="text-muted px-2">Suivez vos patients et optimisez votre gestion de cabinet.</p>
                        </div>
                        <a href="{{ path('app_register_doctor') }}" class="btn-reg btn-doctor mt-4">S'inscrire</a>
                    </div>
                </div>

                {# Infirmier #}
                <div class="col-lg-4 col-md-6">
                    <div class="role-card text-center shadow">
                        <div>
                            <div class="icon-circle nurse-icon">
                                <i class="bi bi-bandaid"></i>
                            </div>
                            <h3 class="fw-bold mb-3" style="color: #2c3e50;">Infirmier</h3>
                            <p class="text-muted px-2">Organisez vos soins à domicile et vos interventions quotidiennes.</p>
                        </div>
                        <a href="{{ path('app_register_nurse') }}" class="btn-reg btn-nurse mt-4">S'inscrire</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}