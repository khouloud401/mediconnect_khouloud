{% extends 'base.html.twig' %}

{% block title %}Mes Visites - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --accent-color: #4facfe;
            --glass-white: rgba(255, 255, 255, 0.9);
            --text-dark: #1e293b;
        }

        body {
            background: url("{{ asset('images/image8.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
        }

        .dashboard-wrapper {
            padding: 40px 0;
            min-height: 100vh;
            background: radial-gradient(circle at top right, rgba(79, 172, 254, 0.1), transparent);
        }

        /* Section de titre (Header) */
        .welcome-section {
            margin-bottom: 35px;
            color: white;
            text-shadow: 0 4px 12px rgba(0,0,0,0.3);
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            background: var(--glass-white);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: var(--accent-color);
            border: 2px solid rgba(255, 255, 255, 0.5);
        }

        .welcome-section h1 {
            font-weight: 800;
            font-size: 2.2rem;
            margin: 0;
        }

        /* Liste de visites moderne */
        .visit-card {
            background: var(--glass-white);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 24px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            transition: 0.3s;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .visit-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.98);
        }

        .visit-info {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .visit-icon {
            width: 55px;
            height: 55px;
            background: white;
            color: var(--accent-color);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

        .status-badge {
            padding: 6px 14px;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
        }

        .status-completed { background: #dcfce7; color: #166534; }
        .status-pending { background: #fef9c3; color: #854d0e; }

        /* Bouton moderne */
        .btn-review-modern {
            background: var(--accent-color);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            transition: 0.3s;
            font-size: 0.85rem;
        }

        .btn-review-modern:hover {
            filter: brightness(1.1);
            color: white;
            box-shadow: 0 4px 12px rgba(79, 172, 254, 0.3);
        }

        /* Flèche retour */
        .back-arrow {
            position: fixed;
            top: 25px;
            left: 25px;
            color: white;
            font-size: 2rem;
            z-index: 1000;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
            transition: 0.3s;
        }

        .back-arrow:hover {
            color: var(--accent-color);
            transform: scale(1.1);
        }

        .empty-state {
            background: var(--glass-white);
            padding: 50px;
            border-radius: 24px;
            text-align: center;
        }

        footer { display: none !important; }
    </style>

    <a href="{{ path('patient_dashboard') }}" class="back-arrow">
        <i class="bi bi-arrow-left"></i>
    </a>

    <div class="dashboard-wrapper">
        <div class="container">

            <div class="welcome-section">
                <div class="profile-avatar shadow-lg">
                    <i class="bi bi-calendar2-check"></i>
                </div>
                <div>
                    <h1>Mes visites</h1>
                    <p class="fs-5 m-0 opacity-75">Historique et suivi de vos rendez-vous.</p>
                </div>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success border-0 shadow-sm rounded-4 mb-4">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="row">
                <div class="col-lg-10">
                    {% if appointments|length > 0 %}
                        {% for appointment in appointments %}
                            <div class="visit-card">
                                <div class="visit-info">
                                    <div class="visit-icon">
                                        <i class="bi bi-person-heart"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold mb-1">Dr. {{ appointment.doctor.fullName }}</h5>
                                        <p class="text-muted small mb-0">
                                            <i class="bi bi-clock me-1"></i>
                                            {{ appointment.dateTime|date('d/m/Y') }} à {{ appointment.dateTime|date('H:i') }}
                                        </p>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center gap-4">
                                    <span class="status-badge {% if appointment.status == 'completed' %}status-completed{% else %}status-pending{% endif %}">
                                        {{ appointment.status }}
                                    </span>

                                    {% if appointment.status == 'completed' %}
                                        <a href="{{ path('patient_add_review', {id: appointment.id}) }}" class="btn-review-modern">
                                            <i class="bi bi-star me-1"></i> Laisser un avis
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}

                        <div class="mt-4">
                            {{ knp_pagination_render(appointments) }}
                        </div>

                    {% else %}
                        <div class="empty-state shadow-sm">
                            <i class="bi bi-calendar-x text-muted mb-3" style="font-size: 3rem;"></i>
                            <p class="text-muted m-0">Aucun rendez-vous trouvé dans votre historique.</p>
                        </div>
                    {% endif %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}