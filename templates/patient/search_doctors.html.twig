{% extends 'base.html.twig' %}

{% block title %}Rechercher un médecin - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --accent-blue: #4facfe;
            --glass-bg: rgba(255, 255, 255, 0.9);
            --text-dark: #1e293b;
        }

        body {
            background: url("{{ asset('images/image8.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
        }

        .search-wrapper {
            padding: 40px 0;
            backdrop-filter: blur(5px);
            min-height: 100vh;
        }

        .page-header {
            color: white;
            text-shadow: 0 4px 10px rgba(0,0,0,0.3);
            margin-bottom: 30px;
        }

        /* Barre de recherche Glassmorphism */
        .search-card {
            background: var(--glass-bg);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
            padding: 25px;
            margin-bottom: 40px;
        }

        .form-control, .form-select {
            border-radius: 12px;
            border: 1px solid #e0e0e0;
            padding: 12px 15px;
            font-size: 0.9rem;
        }

        /* Cartes Médecins */
        .doctor-card {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .doctor-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }

        .doctor-header {
            padding: 20px;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            text-align: center;
        }

        .doctor-info {
            padding: 20px;
            flex-grow: 1;
        }

        .rating-badge {
            background: rgba(255, 193, 7, 0.15);
            color: #d39e00;
            padding: 4px 12px;
            border-radius: 50px;
            font-weight: bold;
            font-size: 0.85rem;
        }

        /* Boutons Modernes */
        .btn-modern {
            border-radius: 12px;
            padding: 10px 15px;
            font-weight: 600;
            font-size: 0.85rem;
            transition: 0.3s;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            width: 100%;
            text-decoration: none;
        }

        .btn-search {
            background: var(--accent-blue);
            color: white;
            box-shadow: 0 4px 15px rgba(79, 172, 254, 0.4);
        }

        .btn-profile { background: #f1f5f9; color: var(--text-dark); }
        .btn-book { background: linear-gradient(45deg, #4facfe, #00f2fe); color: white; }
        .btn-review { background: rgba(255, 193, 7, 0.05); color: #ffc107; border: 1px solid #ffc107; }

        .btn-modern:hover {
            transform: translateY(-2px);
            filter: brightness(1.05);
            color: inherit;
        }

        footer { display: none !important; }
    </style>

    <div class="search-wrapper">
        <div class="container">
            <div class="page-header">
                <h1 class="fw-bold"><i class="bi bi-search"></i> Trouver un praticien</h1>
                <p>Explorez les médecins par spécialité et par ville</p>
            </div>

            <div class="search-card">
                <form method="get">
                    <div class="row g-3">
                        <div class="col-md-5">
                            <select name="specialty" class="form-select">
                                <option value="">Spécialité (Toutes)</option>
                                {% for specialty in specialties %}
                                    <option value="{{ specialty.nom }}" {% if filters.specialty == specialty.nom %}selected{% endif %}>
                                        {{ specialty.nom }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <input type="text" name="ville" class="form-control" placeholder="Ville (ex: Tunis, Sousse...)" value="{{ filters.ville }}">
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn-modern btn-search h-100">
                                <i class="bi bi-funnel-fill"></i> Lancer la recherche
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="row g-4">
                {% for doctor in doctors %}
                    <div class="col-md-4">
                        <div class="doctor-card shadow-sm">
                            <div class="doctor-header">
                                <div class="mb-2">
                                    <i class="bi bi-person-circle display-6 text-primary"></i>
                                </div>
                                <h5 class="fw-bold mb-0">Dr. {{ doctor.fullName }}</h5>
                                <span class="badge bg-soft-primary text-primary mt-1">{{ doctor.specialty.nom }}</span>
                            </div>

                            <div class="doctor-info">
                                <p class="small text-muted mb-3">
                                    <i class="bi bi-geo-alt-fill text-danger"></i> {{ doctor.ville }}
                                </p>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="rating-badge">
                                        <i class="bi bi-star-fill"></i> {{ doctor.averageRating }}/5
                                    </div>
                                    <span class="small text-muted">Avis patients</span>
                                </div>

                                <div class="d-grid gap-2">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <a href="{{ path('patient_doctor_profile', { id: doctor.id }) }}" class="btn-modern btn-profile">
                                                Profil
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <a href="{{ path('patient_book_appointment', { id: doctor.id }) }}" class="btn-modern btn-book">
                                                Réserver
                                            </a>
                                        </div>
                                    </div>
                                    <a href="{{ path('patient_write_review', { id: doctor.id }) }}" class="btn-modern btn-review mt-1">
                                        <i class="bi bi-chat-right-text"></i> Donner un avis
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="search-card text-center p-5">
                            <p class="text-muted m-0">Aucun médecin ne correspond à votre recherche pour le moment.</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="d-flex justify-content-center mt-5">
                {{ knp_pagination_render(doctors) }}
            </div>
        </div>
    </div>
{% endblock %}