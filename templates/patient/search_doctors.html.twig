{% extends 'base.html.twig' %}

{% block title %}Rechercher un médecin - MediConnect{% endblock %}

{% block body %}
    <h1><i class="bi bi-search"></i> Rechercher un médecin</h1>

    <div class="card mt-4">
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <select name="specialty" class="form-control">
                            <option value="">Toutes les spécialités</option>
                            {% for specialty in specialties %}
                                <option value="{{ specialty.nom }}" {% if filters.specialty == specialty.nom %}selected{% endif %}>
                                    {{ specialty.nom }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="ville" class="form-control" placeholder="Ville" value="{{ filters.ville }}">
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="nom" class="form-control" placeholder="Nom du médecin" value="{{ filters.nom }}">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4 mt-3">
        {% for doctor in doctors %}
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Dr. {{ doctor.fullName }}</h5>
                        <p class="card-text">
                            <strong>{{ doctor.specialty.nom }}</strong><br>
                            <i class="bi bi-geo-alt"></i> {{ doctor.ville }}<br>
                            <i class="bi bi-star-fill text-warning"></i> {{ doctor.averageRating }}/5
                        </p>
                        <a href="{{ path('patient_doctor_profile', { id: doctor.id }) }}" class="btn btn-sm btn-outline-primary">
                            Voir le profil
                        </a>
                        <a href="{{ path('patient_book_appointment', { id: doctor.id }) }}" class="btn btn-sm btn-primary">
                            Prendre RDV
                        </a>
                        <a href="{{ path('patient_write_review', { id: doctor.id }) }}" class="btn btn-sm btn-outline-warning mt-2">
                            Donner mon avis
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">Aucun médecin trouvé pour ces critères.</div>
            </div>
        {% endfor %}
    </div>

    <div class="mt-4">
        {{ knp_pagination_render(doctors) }}
    </div>
{% endblock %}
