{% extends 'base.html.twig' %}

{% block title %}Mes ordonnances - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --accent-color: #4facfe;
            --glass-white: rgba(255, 255, 255, 0.9);
            --text-dark: #1e293b;
        }

        body {
            background: url("{{ asset('images/image8.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
        }

        .dashboard-wrapper {
            padding: 40px 0;
            min-height: 100vh;
            background: radial-gradient(circle at top right, rgba(79, 172, 254, 0.1), transparent);
        }

        .welcome-section {
            margin-bottom: 35px;
            color: white;
            text-shadow: 0 4px 12px rgba(0,0,0,0.3);
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            background: var(--glass-white);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: var(--accent-color);
            border: 2px solid rgba(255, 255, 255, 0.5);
        }

        .bento-card {
            background: var(--glass-white);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 24px;
            padding: 30px;
            margin-bottom: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .medication-box {
            background: white;
            padding: 15px;
            border-radius: 15px;
            border-left: 4px solid var(--accent-color);
            margin-bottom: 15px;
        }

        .instruction-box {
            background: rgba(79, 172, 254, 0.05);
            padding: 15px;
            border-radius: 15px;
            font-size: 0.9rem;
            color: #475569;
        }

        .back-arrow {
            position: fixed; top: 25px; left: 25px; color: white; font-size: 2rem;
            z-index: 1000; text-shadow: 0 2px 10px rgba(0,0,0,0.5);
            transition: transform 0.3s ease;
        }

        .back-arrow:hover { color: var(--accent-color); transform: scale(1.1); }

        footer { display: none !important; }
    </style>

    {# RETOUR VERS LE DASHBOARD PATIENT (Ceci évite l'erreur 403) #}
    <a href="{{ path('patient_dashboard') }}" class="back-arrow">
        <i class="bi bi-arrow-left-circle-fill"></i>
    </a>

    <div class="dashboard-wrapper">
        <div class="container">

            <div class="welcome-section">
                <div class="profile-avatar shadow-lg">
                    <i class="bi bi-file-earmark-medical"></i>
                </div>
                <div>
                    <h1>Mes Ordonnances</h1>
                    <p class="fs-5 m-0 opacity-75">Historique de vos prescriptions médicales.</p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">

                    {# SECTION LISTE #}
                    {% if prescriptions|length > 0 %}
                        {% for prescription in prescriptions %}
                            <div class="bento-card">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="fw-bold mb-0">
                                            Dr. {{ prescription.appointment.doctor.fullName }}
                                        </h5>
                                        <small class="text-muted">Prescrit le {{ prescription.createdAt|date('d/m/Y') }} à {{ prescription.createdAt|date('H:i') }}</small>
                                    </div>
                                    <div class="badge bg-primary rounded-pill px-3 py-2">Consultation terminée</div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="small fw-bold text-uppercase text-muted mb-2"><i class="bi bi-capsule-pill me-2"></i>Traitement</p>
                                        <div class="medication-box shadow-sm">
                                            {{ prescription.medications|nl2br }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="small fw-bold text-uppercase text-muted mb-2"><i class="bi bi-info-circle me-2"></i>Conseils & Posologie</p>
                                        <div class="instruction-box">
                                            {{ prescription.instructions|default('Aucune instruction supplémentaire.')|nl2br }}
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-3 text-end">
                                    <button onclick="window.print()" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-printer me-1"></i> Imprimer
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="bento-card text-center py-5">
                            <i class="bi bi-clipboard-x mb-3 text-muted opacity-50" style="font-size: 3.5rem;"></i>
                            <p class="text-muted m-0">Vous n'avez aucune ordonnance pour le moment.</p>
                        </div>
                    {% endif %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}