{% extends 'base.html.twig' %}

{% block title %}Mes ordonnances - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --accent-color: #4facfe;
            --glass-white: rgba(255, 255, 255, 0.9);
            --text-dark: #1e293b;
        }

        body {
            background: url("{{ asset('images/image8.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
        }

        .dashboard-wrapper {
            padding: 40px 0;
            min-height: 100vh;
            background: radial-gradient(circle at top right, rgba(79, 172, 254, 0.1), transparent);
        }

        /* Header Section */
        .welcome-section {
            margin-bottom: 35px;
            color: white;
            text-shadow: 0 4px 12px rgba(0,0,0,0.3);
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            background: var(--glass-white);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: var(--accent-color);
            border: 2px solid rgba(255, 255, 255, 0.5);
        }

        /* Cartes d'ordonnances */
        .prescription-card {
            background: var(--glass-white);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 24px;
            padding: 30px;
            margin-bottom: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: 0.3s ease;
        }

        .prescription-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.95);
        }

        .doc-info {
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

        .medication-box {
            background: white;
            padding: 15px;
            border-radius: 15px;
            border-left: 4px solid var(--accent-color);
            margin-bottom: 15px;
        }

        .instruction-box {
            background: rgba(79, 172, 254, 0.05);
            padding: 15px;
            border-radius: 15px;
            font-size: 0.9rem;
            color: #475569;
        }

        /* Flèche retour */
        .back-arrow {
            position: fixed;
            top: 25px;
            left: 25px;
            color: white;
            font-size: 2rem;
            z-index: 1000;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
        }

        .back-arrow:hover {
            color: var(--accent-color);
            transform: scale(1.1);
        }

        .empty-state {
            background: var(--glass-white);
            padding: 50px;
            border-radius: 24px;
            text-align: center;
        }

        footer { display: none !important; }
    </style>

    <a href="{{ path('patient_dashboard') }}" class="back-arrow">
        <i class="bi bi-arrow-left"></i>
    </a>

    <div class="dashboard-wrapper">
        <div class="container">

            <div class="welcome-section">
                <div class="profile-avatar shadow-lg">
                    <i class="bi bi-file-earmark-medical"></i>
                </div>
                <div>
                    <h1>Mes ordonnances</h1>
                    <p class="fs-5 m-0 opacity-75">Consultez et téléchargez vos prescriptions médicales.</p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-10">
                    {% if prescriptions|length > 0 %}
                        {% for prescription in prescriptions %}
                            <div class="prescription-card">
                                <div class="doc-info d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="fw-bold mb-0">Dr. {{ prescription.appointment.doctor.fullName }}</h5>
                                        <small class="text-muted">Délivrée le {{ prescription.createdAt|date('d/m/Y') }} à {{ prescription.createdAt|date('H:i') }}</small>
                                    </div>
                                    <div class="badge bg-primary rounded-pill px-3 py-2">
                                        <i class="bi bi-check2-circle me-1"></i> Valide
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="small fw-bold text-uppercase text-muted mb-2">Médicaments</p>
                                        <div class="medication-box shadow-sm">
                                            <i class="bi bi-capsule me-2 text-primary"></i>
                                            {{ prescription.medications|nl2br }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="small fw-bold text-uppercase text-muted mb-2">Instructions</p>
                                        <div class="instruction-box">
                                            <i class="bi bi-info-circle me-2 text-primary"></i>
                                            {{ prescription.instructions|default('Aucune instruction particulière.')|nl2br }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                        <div class="mt-4">
                            {{ knp_pagination_render(prescriptions) }}
                        </div>

                    {% else %}
                        <div class="empty-state shadow-sm">
                            <i class="bi bi-clipboard-x mb-3" style="font-size: 3rem; opacity: 0.5;"></i>
                            <p class="text-muted m-0">Vous n'avez pas encore d'ordonnance enregistrée.</p>
                        </div>
                    {% endif %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}