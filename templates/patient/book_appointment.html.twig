{% extends 'base.html.twig' %}

{% block title %}Prendre Rendez-vous avec Dr. {{ doctor.fullName }}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Prendre Rendez-vous avec Dr. {{ doctor.fullName }}</h2>
                    <p class="text-muted text-center">Spécialité : {{ doctor.specialty.nom }}</p>

                    {{ form_start(form) }}
                    {{ form_row(form.dateTime) }}
                    {{ form_row(form.motif) }}

                    <button type="submit" class="btn btn-primary w-100 mt-3">Confirmer la demande de Rendez-vous</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
