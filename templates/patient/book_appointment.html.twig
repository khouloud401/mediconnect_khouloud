{% extends 'base.html.twig' %}

{% block title %}Prendre Rendez-vous - Dr. {{ doctor.fullName }}{% endblock %}

{% block body %}
    <style>
        :root {
            --accent-color: #4facfe;
            --glass-white: rgba(255, 255, 255, 0.9);
            --text-dark: #1e293b;
        }

        body {
            background: url("{{ asset('images/image8.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
        }

        .dashboard-wrapper {
            padding: 40px 0;
            min-height: 100vh;
            background: radial-gradient(circle at top right, rgba(79, 172, 254, 0.1), transparent);
        }

        /* Section de titre (Header) */
        .welcome-section {
            margin-bottom: 30px;
            color: white;
            text-shadow: 0 4px 12px rgba(0,0,0,0.3);
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            background: var(--glass-white);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: var(--accent-color);
            border: 2px solid rgba(255, 255, 255, 0.5);
        }

        .welcome-section h1 {
            font-weight: 800;
            font-size: 2.2rem;
            margin: 0;
        }

        /* Carte de formulaire Bento */
        .bento-card {
            background: var(--glass-white);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 24px;
            padding: 35px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }

        .card-label {
            display: inline-block;
            padding: 4px 12px;
            background: rgba(79, 172, 254, 0.15);
            color: var(--accent-color);
            border-radius: 50px;
            font-size: 0.7rem;
            font-weight: 700;
            text-transform: uppercase;
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
            font-size: 0.9rem;
        }

        .form-control {
            border-radius: 15px;
            padding: 12px 18px;
            border: 1px solid #e0e0e0;
            margin-bottom: 20px;
            background: white;
        }

        /* Bouton moderne */
        .btn-modern-footer {
            background: var(--accent-color);
            color: white;
            border: none;
            padding: 15px;
            border-radius: 16px;
            width: 100%;
            font-weight: 600;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(79, 172, 254, 0.3);
            transition: 0.3s;
            margin-top: 10px;
        }

        .btn-modern-footer:hover {
            filter: brightness(1.1);
            transform: translateY(-2px);
            color: white;
        }

        /* Flèche retour */
        .back-arrow {
            position: fixed;
            top: 25px;
            left: 25px;
            color: white;
            font-size: 2rem;
            z-index: 1000;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
            transition: 0.3s;
        }

        .back-arrow:hover {
            color: var(--accent-color);
            transform: scale(1.1);
        }

        footer { display: none !important; }
    </style>

    <a href="{{ path('patient_search_doctors') }}" class="back-arrow">
        <i class="bi bi-arrow-left"></i>
    </a>

    <div class="dashboard-wrapper">
        <div class="container">

            <div class="welcome-section">
                <div class="profile-avatar shadow-lg">
                    <i class="bi bi-calendar-plus"></i>
                </div>
                <div>
                    <h1>Réservation</h1>
                    <p class="fs-5 m-0 opacity-75">Demande de rendez-vous avec Dr. {{ doctor.fullName }}</p>
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="col-lg-8 col-xl-7">
                    <div class="bento-card">
                        <span class="card-label">Détails de la visite</span>
                        <h4 class="fw-bold mb-4">Finaliser votre demande</h4>

                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.dateTime, "Choisir la date et l'heure", {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.dateTime, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Médecin sélectionné</label>
                                <input type="text" class="form-control" value="Dr. {{ doctor.fullName }}" disabled>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.motif, "Motif de consultation", {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.motif, {'attr': {'class': 'form-control', 'placeholder': 'Expliquez brièvement votre besoin...'}}) }}
                        </div>

                        <button type="submit" class="btn-modern-footer">
                            Confirmer la demande de rendez-vous
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}