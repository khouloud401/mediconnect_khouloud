{% extends 'base.html.twig' %}

{% block title %}Gestion des Infirmiers{% endblock %}

{% block stylesheets %}
    <style>
        body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; padding: 20px; }
        .main-container { max-width: 1400px; margin: 0 auto; }
        .header-section, .table-container { background: white; border-radius: 20px; padding: 30px; margin-bottom: 30px; box-shadow: 0 10px 40px rgba(0,0,0,0.2); }
        .header-title { font-size: 2.5rem; font-weight: bold; color: #667eea; display: flex; align-items: center; gap: 15px; }
        .stat-card { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px; padding: 20px; color: white; }
        .btn-add { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); border-radius: 30px; padding: 12px 30px; color: white; font-weight: bold; text-decoration: none; }
        .nurse-name { font-weight: bold; color: #667eea; }
    </style>
{% endblock %}

{% block body %}
    <div class="main-container">
        <div class="header-section">
            <div class="header-title mb-4"><i class="fas fa-user-nurse"></i> Mes Infirmiers</div>
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex gap-3">
                    <div class="stat-card"><strong>{{ nurses|length }}</strong> Total</div>
                </div>
                <a href="{{ path('doctor_nurse_new') }}" class="btn-add"><i class="fas fa-plus"></i> Ajouter</a>
            </div>
        </div>

        <div class="table-container">
            <table class="table align-middle">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Équipe</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for nurse in nurses %}
                    <tr>
                        <td class="nurse-name">{{ nurse.name }}</td>
                        <td>{{ nurse.email }}</td>
                        <td><span class="badge bg-info">{{ nurse.shift }}</span></td>
                        <td class="text-center">
                            <button class="btn btn-primary btn-sm rounded-pill" data-bs-toggle="modal" data-bs-target="#task{{ nurse.id }}">
                                <i class="fas fa-prescription"></i> Assigner Tâche
                            </button>

                            <a href="{{ path('doctor_nurse_edit', {id: nurse.id}) }}" class="btn btn-warning btn-sm mx-1"><i class="fas fa-edit"></i></a>

                            <form method="post" action="{{ path('doctor_nurse_delete', {id: nurse.id}) }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nurse.id) }}">
                                <button class="btn btn-danger btn-sm" onclick="return confirm('Supprimer ?')"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>

                    <div class="modal fade" id="task{{ nurse.id }}" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="{{ path('doctor_assign_task', {id: nurse.id}) }}" method="POST">
                                    <div class="modal-header bg-primary text-white">
                                        <h5 class="modal-title">Soin pour {{ nurse.name }}</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="text" name="patientName" class="form-control mb-3" placeholder="Nom du Patient (Ex: Ahmed)" required>
                                        <textarea name="description" class="form-control" placeholder="Médicaments ou instructions..." rows="3" required></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary w-100">Envoyer l'ordre</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}