{% extends 'base.html.twig' %}

{% block title %}Mes rendez-vous - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --pistachio-green: #93c47d;
            --deep-green: #38761d;
            --glass-white: rgba(255, 255, 255, 0.9);
            --text-dark: #1e293b;
        }

        body {
            background: url("{{ asset('images/image10.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
        }

        .dashboard-wrapper {
            padding: 40px 0;
            min-height: 100vh;
            background: rgba(0, 0, 0, 0.15);
        }

        /* Flèche Retour */
        .back-arrow {
            position: fixed;
            top: 25px;
            left: 25px;
            color: white;
            font-size: 2rem;
            z-index: 1000;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
            transition: 0.3s;
        }

        .back-arrow:hover {
            color: var(--pistachio-green);
            transform: scale(1.1);
        }

        /* Header */
        .page-header {
            color: white;
            text-shadow: 0 4px 12px rgba(0,0,0,0.3);
            margin-bottom: 35px;
        }

        /* Carte Bento Table */
        .bento-card {
            background: var(--glass-white);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

        /* Table Design */
        .table { --bs-table-bg: transparent; vertical-align: middle; }
        .table thead th {
            color: var(--deep-green);
            border-bottom: 2px solid var(--pistachio-green);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            padding: 15px;
        }

        .table tbody td { padding: 15px; }

        /* Badges de Statut */
        .status-badge {
            padding: 6px 12px;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
        }
        .status-pending { background: #fff3cd; color: #856404; }
        .status-accepted { background: #d4edda; color: #155724; }
        .status-completed { background: #cce5ff; color: #004085; }
        .status-refused { background: #f8d7da; color: #721c24; }

        /* Boutons d'action */
        .btn-action {
            border-radius: 12px;
            font-weight: 600;
            padding: 8px 16px;
            transition: 0.3s;
        }

        /* Pagination */
        .pagination .page-link {
            border-radius: 8px;
            margin: 0 3px;
            color: var(--deep-green);
        }
        .pagination .active .page-link {
            background-color: var(--pistachio-green);
            border-color: var(--pistachio-green);
        }

        footer { display: none !important; }
    </style>

    <a href="{{ path('doctor_dashboard') }}" class="back-arrow">
        <i class="bi bi-arrow-left"></i>
    </a>

    <div class="dashboard-wrapper">
        <div class="container">

            <div class="page-header">
                <h1 class="fw-bold m-0"><i class="bi bi-calendar-check me-3"></i>Mes rendez-vous</h1>
                <p class="opacity-75">Gérez votre emploi du temps et le suivi des patients.</p>
            </div>

            {# Messages Flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show rounded-pill shadow-sm border-0 mb-4">
                    <i class="bi bi-check-circle-fill me-2"></i> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="bento-card">
                {% if appointments|length > 0 %}
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Patient</th>
                                <th>Date & Heure</th>
                                <th>Statut</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for appointment in appointments %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle p-2 me-3 text-primary">
                                                <i class="bi bi-person-fill"></i>
                                            </div>
                                            <span class="fw-bold">{{ appointment.patient.fullName }}</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="fw-bold">{{ appointment.dateTime|date('d/m/Y') }}</div>
                                        <div class="small text-muted"><i class="bi bi-clock me-1"></i>{{ appointment.dateTime|date('H:i') }}</div>
                                    </td>
                                    <td>
                                            <span class="status-badge status-{{ appointment.status }}">
                                                {{ appointment.status|trans }}
                                            </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            {% if appointment.status == 'pending' %}
                                                <a href="{{ path('doctor_accept_appointment', {id: appointment.id}) }}" class="btn btn-sm btn-success btn-action shadow-sm">
                                                    <i class="bi bi-check-lg"></i>
                                                </a>
                                                <a href="{{ path('doctor_refuse_appointment', {id: appointment.id}) }}" class="btn btn-sm btn-danger btn-action shadow-sm">
                                                    <i class="bi bi-x-lg"></i>
                                                </a>
                                            {% elseif appointment.status == 'accepted' %}
                                                <a href="{{ path('doctor_complete_appointment', {id: appointment.id}) }}" class="btn btn-sm btn-primary btn-action w-100">
                                                    Terminer le RDV
                                                </a>
                                            {% elseif appointment.status == 'completed' %}
                                                <a href="{{ path('doctor_prescriptions', {'appointmentId': appointment.id}) }}" class="btn btn-sm btn-outline-pistachio btn-action border-2" style="border: 1px solid var(--pistachio-green); color: var(--deep-green);">
                                                    <i class="bi bi-file-earmark-medical me-1"></i> Ordonnance
                                                </a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        {{ knp_pagination_render(appointments) }}
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-calendar-x display-1 text-muted opacity-25"></i>
                        <p class="mt-3 text-muted">Aucun rendez-vous trouvé dans votre agenda.</p>
                    </div>
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}