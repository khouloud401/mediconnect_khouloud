{% extends 'base.html.twig' %}

{% block title %}Dashboard Médecin - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --pistachio-green: #93c47d;
            --deep-green: #38761d;
            --soft-green: rgba(232, 245, 233, 0.9);
            --glass-white: rgba(255, 255, 255, 0.85);
        }

        body {
            background: url("{{ asset('images/image10.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: #2c3e50;
        }

        .dashboard-wrapper {
            padding: 40px 0;
            min-height: 100vh;
            background: rgba(0, 0, 0, 0.1);
        }

        .welcome-title {
            color: white;
            text-shadow: 0 4px 12px rgba(0,0,0,0.3);
            font-weight: 800;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--glass-white);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 20px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            text-align: center;
            transition: 0.3s;
        }

        .stat-card:hover { transform: translateY(-5px); }
        .stat-number { font-size: 2rem; font-weight: 800; color: var(--deep-green); }
        .stat-label { font-size: 0.85rem; color: #666; font-weight: 600; text-transform: uppercase; }

        .bento-card {
            background: var(--glass-white);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
            height: 100%;
        }

        .appointment-item {
            background: rgba(255, 255, 255, 0.5);
            border-radius: 15px;
            padding: 15px;
            margin-bottom: 12px;
            border-left: 5px solid var(--pistachio-green);
        }

        .btn-green-pistachio {
            background: var(--pistachio-green);
            color: white;
            border-radius: 12px;
            font-weight: 600;
            border: none;
            transition: 0.3s;
        }

        .btn-green-pistachio:hover {
            background: var(--deep-green);
            color: white;
        }

        .btn-outline-pistachio {
            border: 2px solid var(--pistachio-green);
            color: var(--deep-green);
            border-radius: 12px;
            font-weight: 600;
            transition: 0.3s;
        }

        .btn-outline-pistachio:hover {
            background: var(--pistachio-green);
            color: white;
        }

        footer { display: none !important; }
    </style>

    <div class="dashboard-wrapper">
        <div class="container">
            <h1 class="welcome-title">Bienvenue, Docteur</h1>

            {# Statistiques en haut #}
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-number">{{ pendingAppointments|length }}</div>
                        <div class="stat-label">En attente</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-number">{{ upcomingAppointments|length }}</div>
                        <div class="stat-label">À venir</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-number">{{ totalConsultations }}</div>
                        <div class="stat-label">Consultations</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <div class="stat-number text-warning">{{ averageRating }}/5</div>
                        <div class="stat-label">Note Moyenne</div>
                    </div>
                </div>
            </div>

            <div class="row mt-5 g-4">
                {# Section Rendez-vous #}
                <div class="col-lg-7">
                    <div class="bento-card">
                        <h4 class="fw-bold mb-4" style="color: var(--deep-green);">
                            <i class="bi bi-calendar2-week me-2"></i>Rendez-vous en attente
                        </h4>

                        {% for appointment in pendingAppointments %}
                            <div class="appointment-item shadow-sm">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="fw-bold mb-1">{{ appointment.patient.fullName }}</h6>
                                        <small class="text-muted"><i class="bi bi-clock me-1"></i>{{ appointment.dateTime|date('d/m/Y à H:i') }}</small>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('doctor_accept_appointment', {id: appointment.id}) }}" class="btn btn-sm btn-success rounded-pill px-3">Accepter</a>
                                        <a href="{{ path('doctor_refuse_appointment', {id: appointment.id}) }}" class="btn btn-sm btn-danger rounded-pill px-3">Refuser</a>
                                    </div>
                                </div>
                                <div class="mt-2 text-end">
                                    <a href="{{ path('doctor_prescriptions', {'appointmentId': appointment.id}) }}" class="btn btn-sm btn-outline-warning rounded-pill">Rédiger ordonnance</a>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center py-5">
                                <i class="bi bi-check2-circle display-4 text-muted opacity-50"></i>
                                <p class="text-muted mt-2">Aucun rendez-vous en attente.</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {# Section Actions Rapides #}
                <div class="col-lg-5">
                    <div class="bento-card">
                        <h4 class="fw-bold mb-4" style="color: var(--deep-green);">
                            <i class="bi bi-grid-fill me-2"></i>Actions Rapides
                        </h4>
                        <div class="d-grid gap-3">
                            <a href="{{ path('doctor_nurses_list') }}" class="btn btn-green-pistachio py-3 shadow-sm">
                                <i class="fas fa-user-nurse me-2"></i> Donner des tâches
                            </a>
                            <a href="{{ path('doctor_appointments') }}" class="btn btn-outline-pistachio py-2">
                                <i class="bi bi-calendar-event me-2"></i> Tous mes rendez-vous
                            </a>
                            <a href="{{ path('doctor_patients') }}" class="btn btn-outline-pistachio py-2">
                                <i class="bi bi-people me-2"></i> Mes patients
                            </a>

                            {# Le bouton Profil occupe maintenant toute la largeur pour un design plus propre #}
                            <a href="{{ path('doctor_profile') }}" class="btn btn-light py-2 border rounded-3 shadow-sm mt-2">
                                <i class="bi bi-person-circle me-2"></i>Mon profil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}