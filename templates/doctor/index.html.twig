{% extends 'base.html.twig' %}

{% block title %}Gestion des Infirmiers - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --pistachio-green: #93c47d;
            --deep-green: #38761d;
            --soft-green: #e8f5e9;
            --glass-white: rgba(255, 255, 255, 0.9);
        }

        body {
            background: url("{{ asset('images/image10.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: #2c3e50;
        }

        .dashboard-wrapper {
            padding: 40px 0;
            min-height: 100vh;
            background: rgba(0, 0, 0, 0.15);
        }

        .back-arrow {
            position: fixed;
            top: 25px;
            left: 25px;
            color: white;
            font-size: 2rem;
            z-index: 1000;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
            transition: 0.3s;
        }

        .back-arrow:hover {
            color: var(--pistachio-green);
            transform: scale(1.1);
        }

        .bento-card {
            background: var(--glass-white);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            margin-bottom: 25px;
        }

        .header-title {
            color: white;
            text-shadow: 0 4px 12px rgba(0,0,0,0.3);
            font-weight: 800;
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 30px;
        }

        .stat-badge {
            background: var(--pistachio-green);
            color: white;
            padding: 15px 25px;
            border-radius: 20px;
            display: inline-block;
            box-shadow: 0 5px 15px rgba(147, 196, 125, 0.3);
        }

        .table { --bs-table-bg: transparent; vertical-align: middle; }
        .table thead th {
            color: var(--deep-green);
            border-bottom: 2px solid var(--pistachio-green);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        .nurse-row:hover { background: rgba(147, 196, 125, 0.05); }

        .badge-shift {
            padding: 8px 15px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.8rem;
        }
        .badge-morning { background: #fff3cd; color: #856404; }
        .badge-evening { background: #d1ecf1; color: #0c5460; }
        .badge-night { background: #343a40; color: white; }

        .btn-add-nurse {
            background: var(--deep-green);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 15px;
            font-weight: 600;
            transition: 0.3s;
        }

        .btn-add-nurse:hover {
            background: #2d5a16;
            transform: translateY(-2px);
            color: white;
        }

        .action-btn {
            border-radius: 10px;
            padding: 8px 15px;
            font-weight: 600;
        }

        /* Correction pour que la modale soit bien visible */
        .modal-content {
            background-color: white !important;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        footer { display: none !important; }
    </style>

    <a href="{{ path('doctor_dashboard') }}" class="back-arrow">
        <i class="bi bi-arrow-left"></i>
    </a>

    <div class="dashboard-wrapper">
        <div class="container">

            <div class="header-title">
                <h1 class="m-0"><i class="fas fa-user-nurse me-2"></i>Gestion des Infirmiers</h1>
            </div>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'danger' ? 'danger' : 'success' }} alert-dismissible fade show rounded-pill shadow-sm border-0 mb-4">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="bento-card">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div class="stat-badge text-center">
                        <div class="h3 fw-bold m-0">{{ nurses|length }}</div>
                        <div class="small text-uppercase opacity-75">Infirmiers Actifs</div>
                    </div>
                    <button type="button" class="btn btn-add-nurse shadow" data-bs-toggle="modal" data-bs-target="#searchNurseModal">
                        <i class="bi bi-person-plus-fill me-2"></i>Lier un nouvel infirmier
                    </button>
                </div>
            </div>

            <div class="bento-card">
                {% if nurses|length > 0 %}
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Nom de l'infirmier</th>
                                <th>Garde (Shift)</th>
                                <th>N° Équipe</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for nurse in nurses %}
                                <tr class="nurse-row">
                                    <td class="fw-bold text-primary">Dr. {{ nurse.name }}</td>
                                    <td>
                                        {% if nurse.shift == 'morning' %}
                                            <span class="badge-shift badge-morning"><i class="bi bi-sun-fill me-1"></i>Matin</span>
                                        {% elseif nurse.shift == 'evening' %}
                                            <span class="badge-shift badge-evening"><i class="bi bi-sunset-fill me-1"></i>Soir</span>
                                        {% elseif nurse.shift == 'night' %}
                                            <span class="badge-shift badge-night"><i class="bi bi-moon-stars-fill me-1"></i>Nuit</span>
                                        {% else %}
                                            <span class="badge bg-light text-muted">Non défini</span>
                                        {% endif %}
                                    </td>
                                    <td><span class="badge bg-soft-green text-dark px-3 py-2 rounded-pill">{{ nurse.teamNumber ?? '-' }}</span></td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-success action-btn me-2" data-bs-toggle="modal" data-bs-target="#taskModal{{ nurse.id }}">
                                            <i class="bi bi-clipboard-plus me-1"></i>Donner tâche
                                        </button>
                                        <form method="post" action="{{ path('doctor_nurse_delete', {'id': nurse.id}) }}" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nurse.id) }}">
                                            <button class="btn btn-sm btn-outline-danger action-btn" onclick="return confirm('Retirer cet infirmier ?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-people-fill display-1 text-muted opacity-25"></i>
                        <p class="mt-3 text-muted">Votre équipe est vide. Ajoutez un infirmier par email.</p>
                    </div>
                {% endif %}
            </div>

        </div>
    </div>

    {# --- SECTION DES MODALES (SORTIES DE LA TABLE) --- #}
    {% for nurse in nurses %}
        <div class="modal fade" id="taskModal{{ nurse.id }}" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-4 border-0">
                    <form action="{{ path('doctor_assign_task', {id: nurse.id}) }}" method="POST">
                        <div class="modal-header border-0 bg-success text-white rounded-top-4">
                            <h5 class="modal-title fw-bold">Nouvelle tâche : {{ nurse.name }}</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body p-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-dark">Nom du Patient</label>
                                <input type="text" name="patientName" class="form-control rounded-3 shadow-sm" required placeholder="Entrez le nom du patient">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-dark">Description du soin</label>
                                <textarea name="description" class="form-control rounded-3 shadow-sm" rows="4" required placeholder="Décrivez le soin à effectuer..."></textarea>
                            </div>
                        </div>
                        <div class="modal-footer border-0">
                            <input type="hidden" name="_token" value="{{ csrf_token('assign_task' ~ nurse.id) }}">
                            <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-success rounded-pill px-4 shadow">Envoyer l'ordre</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="modal fade" id="searchNurseModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 border-0">
                <form action="{{ path('doctor_add_existing_nurse') }}" method="POST">
                    <div class="modal-header border-0 bg-primary text-white rounded-top-4" style="background-color: var(--deep-green) !important;">
                        <h5 class="modal-title fw-bold">Lier un infirmier</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <p class="small text-muted mb-4">L'infirmier doit déjà posséder un compte sur la plateforme.</p>
                        <div class="mb-3">
                            <label class="form-label fw-bold text-dark">Email de l'infirmier</label>
                            <input type="email" name="email" class="form-control rounded-3 shadow-sm" placeholder="exemple@email.com" required>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <input type="hidden" name="_token" value="{{ csrf_token('add_nurse') }}">
                        <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-success rounded-pill px-4 shadow" style="background-color: var(--pistachio-green); border:none;">Ajouter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}