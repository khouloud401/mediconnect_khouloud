{% extends 'base.html.twig' %}

{% block title %}Mes patients - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --pistachio-green: #93c47d;
            --deep-green: #38761d;
            --glass-white: rgba(255, 255, 255, 0.9);
            --text-dark: #1e293b;
        }

        body {
            background: url("{{ asset('images/image10.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
        }

        .dashboard-wrapper {
            padding: 40px 0;
            min-height: 100vh;
            background: rgba(0, 0, 0, 0.15);
        }

        /* Flèche Retour */
        .back-arrow {
            position: fixed;
            top: 25px;
            left: 25px;
            color: white;
            font-size: 2.5rem;
            z-index: 1000;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
            transition: 0.3s;
        }

        .back-arrow:hover {
            color: var(--pistachio-green);
            transform: scale(1.1);
        }

        .page-header {
            color: white;
            text-shadow: 0 4px 12px rgba(0,0,0,0.3);
            margin-bottom: 35px;
        }

        /* Carte Bento Table */
        .bento-card {
            background: var(--glass-white);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            padding: 30px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

        /* Table Design */
        .table { --bs-table-bg: transparent; vertical-align: middle; }
        .table thead th {
            color: var(--deep-green);
            border-bottom: 2px solid var(--pistachio-green);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            padding: 15px;
        }

        .patient-row:hover {
            background: rgba(147, 196, 125, 0.05);
        }

        /* Bouton Ordonnance */
        .btn-prescription {
            background: var(--pistachio-green);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 8px 16px;
            font-weight: 600;
            transition: 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-prescription:hover {
            background: var(--deep-green);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(56, 118, 29, 0.3);
        }

        footer { display: none !important; }
    </style>

    <a href="{{ path('doctor_dashboard') }}" class="back-arrow">
        <i class="bi bi-arrow-left-circle-fill"></i>
    </a>

    <div class="dashboard-wrapper">
        <div class="container">

            <div class="page-header">
                <h1 class="fw-bold m-0"><i class="bi bi-people-fill me-3"></i>Mes patients</h1>
                <p class="opacity-75">Liste complète des patients suivis.</p>
            </div>

            <div class="bento-card">
                {% if patients|length > 0 %}
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Nom du Patient</th>
                                <th>Contact</th>
                                <th class="text-center">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for patient in patients %}
                                <tr class="patient-row">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-white rounded-circle p-2 me-3 shadow-sm text-success" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <span class="fw-bold">{{ patient.fullName }}</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="small fw-bold"><i class="bi bi-envelope me-2"></i>{{ patient.email }}</div>
                                        <div class="small text-muted"><i class="bi bi-telephone me-2"></i>{{ patient.phone ?? '-' }}</div>
                                    </td>
                                    <td class="text-center">
                                        {# MODIFICATION ICI : On passe patientId pour filtrer les ordonnances de ce patient précis #}
                                        <a href="{{ path('doctor_prescriptions', { 'patientId': patient.id}) }}" class="btn-prescription">
                                            <i class="bi bi-file-earmark-medical"></i>  Ordonnances
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-person-x display-1 text-muted opacity-25"></i>
                        <p class="mt-3 text-muted">Vous n'avez pas encore de patients enregistrés.</p>
                    </div>
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}