{% extends 'base.html.twig' %}

{% block title %}Gestion des Infirmiers - MediConnect{% endblock %}

{% block body %}
    <style>
        :root {
            --nude-bg: #fdfaf7;
            --nude-accent: #d4a373;
            --nude-text: #4a3f35;
        }
        body { background-color: var(--nude-bg); color: var(--nude-text); }

        .admin-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(212, 163, 115, 0.1);
            padding: 25px;
            border: none;
        }

        /* Style pour le bouton Retour Dashboard */
        .btn-back {
            background-color: transparent;
            color: var(--nude-accent);
            border: 1px solid var(--nude-accent);
            border-radius: 12px;
            padding: 10px 20px;
            transition: 0.3s;
            text-decoration: none;
        }
        .btn-back:hover { background-color: var(--nude-accent); color: white; }

        .table thead th { border: none; color: #a5a5a5; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; }
        .table tbody tr { transition: 0.3s; border-bottom: 1px solid #f9f4ef; }
        .table tbody td { padding: 20px 10px; vertical-align: middle; border: none; }

        .avatar-nude {
            width: 45px; height: 45px;
            background: #fdf0e6; color: var(--nude-accent);
            border-radius: 12px; display: flex; align-items: center;
            justify-content: center; font-weight: bold; font-size: 1.2rem;
        }
    </style>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="fw-bold" style="color: var(--nude-text);">Équipe Infirmière</h1>
                <p class="text-muted">Consultez la liste du personnel infirmier inscrit.</p>
            </div>
            <a href="{{ path('admin_dashboard') }}" class="btn-back">
                <i class="bi bi-arrow-left"></i> Retour Dashboard
            </a>
        </div>

        <div class="admin-card">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Infirmier(e)</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for nurse in nurses %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-nude me-3">{{ nurse.nom|default(nurse.name)|slice(0,1)|upper }}</div>
                                    <div>
                                        <span class="fw-bold d-block">{{ nurse.nom|default(nurse.name) }}</span>
                                        <small class="text-muted">{{ nurse.prenom|default('') }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>{{ nurse.email }}</td>
                            <td><span class="badge bg-light text-dark rounded-pill px-3">{{ nurse.phone|default('N/A') }}</span></td>
                            <td class="text-end">
                                {# Le bouton "Modifier" a été retiré pour suivre votre logique #}
                                <form method="post" action="{{ path('admin_nurse_delete', {id: nurse.id}) }}" class="d-inline" onsubmit="return confirm('Attention : Cette action révoquera définitivement l\'accès de cet infirmier. Continuer ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nurse.id) }}">
                                    <button class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                        <i class="bi bi-trash me-1"></i> Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-5">Aucun membre du personnel infirmier n'est inscrit.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}