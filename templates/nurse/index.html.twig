{% extends 'base.html.twig' %}

{% block title %}Gestion des Infirmiers{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
        }
        .header-section {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        .header-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #667eea;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .stats-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            padding: 25px;
            color: white;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        }
        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
        }
        .stat-label {
            font-size: 1rem;
            opacity: 0.9;
        }
        .table-container {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        .table {
            font-size: 1.1rem;
        }
        .table thead th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 15px;
            font-size: 1.2rem;
        }
        .table tbody tr {
            transition: all 0.3s;
        }
        .table tbody tr:hover {
            background: #f0f0ff;
            transform: scale(1.01);
        }
        .table tbody td {
            padding: 15px;
            vertical-align: middle;
            font-size: 1.05rem;
        }
        .badge {
            font-size: 0.95rem;
            padding: 8px 15px;
            border-radius: 20px;
        }
        .badge-morning {
            background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
            color: #000;
        }
        .badge-evening {
            background: linear-gradient(135deg, #ff9800 0%, #ff5722 100%);
            color: #fff;
        }
        .badge-night {
            background: linear-gradient(135deg, #3f51b5 0%, #1a237e 100%);
            color: #fff;
        }
        .btn-add {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
            border-radius: 30px;
            padding: 15px 40px;
            font-size: 1.2rem;
            font-weight: bold;
            color: white;
            box-shadow: 0 5px 20px rgba(40, 167, 69, 0.4);
            transition: all 0.3s;
        }
        .btn-add:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.6);
        }
        .action-btn {
            margin: 0 5px;
            padding: 10px 15px;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s;
        }
        .action-btn:hover {
            transform: translateY(-2px);
        }
        .nurse-name {
            font-weight: bold;
            color: #667eea;
            font-size: 1.1rem;
        }
        .team-badge {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
            color: white;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="main-container">
        <!-- Header Section -->
        <div class="header-section">
            <div class="header-title">
                <i class="fas fa-user-nurse fa-2x"></i>
                Gestion des Infirmiers
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <div class="stats-cards flex-grow-1 me-4">
                    <div class="stat-card">
                        <div class="stat-number">{{ nurses|length }}</div>
                        <div class="stat-label">Total Infirmiers</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number">{{ nurses|filter(n => n.shift == 'morning')|length }}</div>
                        <div class="stat-label">√âquipe Matin</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number">{{ nurses|filter(n => n.shift == 'evening')|length }}</div>
                        <div class="stat-label">√âquipe Soir</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number">{{ nurses|filter(n => n.shift == 'night')|length }}</div>
                        <div class="stat-label">√âquipe Nuit</div>
                    </div>
                </div>
                <div>
                    <a href="{{ path('app_nurse_new') }}" class="btn btn-add">
                        <i class="fas fa-plus"></i> Ajouter un Infirmier
                    </a>
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="table-container">
            {% if nurses|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th style="width: 5%">ID</th>
                            <th style="width: 20%">Nom</th>
                            <th style="width: 25%">Email</th>
                            <th style="width: 15%">T√©l√©phone</th>
                            <th style="width: 15%">√âquipe</th>
                            <th style="width: 10%">N¬∞ √âquipe</th>
                            <th style="width: 10%">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for nurse in nurses %}
                            <tr>
                                <td>{{ nurse.id }}</td>
                                <td class="nurse-name">{{ nurse.name }}</td>
                                <td>{{ nurse.email }}</td>
                                <td>{{ nurse.phone }}</td>
                                <td>
                                    {% if nurse.shift == 'morning' %}
                                        <span class="badge badge-morning">‚òÄÔ∏è Matin (8h-16h)</span>
                                    {% elseif nurse.shift == 'evening' %}
                                        <span class="badge badge-evening">üåÜ Soir (16h-00h)</span>
                                    {% elseif nurse.shift == 'night' %}
                                        <span class="badge badge-night">üåô Nuit (00h-8h)</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Non d√©fini</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if nurse.teamNumber %}
                                        <span class="team-badge">√âquipe {{ nurse.teamNumber }}</span>
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_nurse_show', {'id': nurse.id}) }}" class="btn btn-info btn-sm action-btn">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_nurse_edit', {'id': nurse.id}) }}" class="btn btn-warning btn-sm action-btn">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_nurse_delete', {'id': nurse.id}) }}" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nurse.id) }}">
                                        <button class="btn btn-danger btn-sm action-btn" onclick="return confirm('Supprimer cet infirmier ?');">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info" style="font-size: 1.2rem; padding: 30px;">
                    <i class="fas fa-info-circle"></i> Aucun infirmier trouv√©. Cliquez sur "Ajouter un Infirmier" pour commencer.
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}
